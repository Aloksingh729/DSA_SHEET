class Solution {
public:
    int arraySign(vector<int>& nums) {
        int positive=0,negtive=0;
        for(int i=0;i<nums.size();i++)
        {
            if(nums[i]>0) {
                positive++;
            }
            else if(nums[i]<0) {
                negtive++;
            }
            else{
                 return 0;
            }
        }
        if(negtive%2==0) 
        {
            return 1;
        }
        return -1;
    }
};
